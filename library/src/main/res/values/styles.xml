<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>



    <style name="BaseTheme.Vitarrico" parent="AppTheme">
        <item name="colorPrimary">@color/material_cyan_100</item>
        <item name="colorPrimaryDark">@color/material_cyan_700</item>
        <item name="colorAccent">@color/material_cyan_050</item>
        <item name="android:navigationBarColor">@color/material_cyan_200</item>
        <item name="android:colorButtonNormal">@color/material_cyan_400</item>
        <item name="android:editTextColor">@color/material_cyan_a700</item>
    </style>

    <style name="AppTheme.Vitarrico" parent="BaseTheme.Vitarrico">
        <!--  <item name="buttonStyle">@style/PrimaryColoredButtonVitarrico</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
